<h1> All the Cats! </h1>

<ul> 
  <% @cats.each do |cat| %>
    <h2> Name: <%= cat.name %> </h2>
    <ul>
      <li>Age: <%= cat.age %> </li>
      <li>Sex: <%= cat.sex %> </li>
      <li>Color: <%= cat.color %> </li>
    </ul>
    <p><%= cat.description %></p>

    <form action="<%=cat_url(cat)%>">
      <input type="submit" value="See This Kitty">
    </form>
    <br>
    <form action="<%=edit_cat_url(cat)%>">
      <input type="submit" value="Edit This Kitty">
    </form>
  
  <% end %>
</ul>
