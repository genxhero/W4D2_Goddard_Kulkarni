<table>
    <thead>
        <tr>
            <th colspan="2"> Meet <%= @cat.name %>!  </th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>Age</td>
            <td> <%= @cat.age %></td>
        </tr>
        
        <tr>
            <td>Sex</td>
            <td> <%= @cat.sex %></td>
        </tr>
        
        <tr>
            <td>Color</td>
            <td> <%= @cat.color %></td>
        </tr>
        
    </tbody>
    <tfoot>
        <tr>
            <td colspan="2"> <%= @cat.description %> </td>
        </tr>
    </tfoot>
</table>
<br>
<h4> Current rental requests for <%= @cat.name %> </h4>
<ul>
  <% @requests.each do |request| %>
    <li> 
      Start date: <%= request.start_date %>,
      End date: <%= request.end_date %>,
      Status: <%= request.status %>
      <form action="<%=approve_request_cat_rental_request_url(request)%>">
        <input type="submit" value="Approve Request">
      </form>
      <form action="<%=deny_request_cat_rental_request_url(request)%>">
        <input type="submit" value="Deny Request">
      </form>
    </li>
  <% end %>
</ul>
<br>
<form action="<%=edit_cat_url(@cat)%>">
  <input type="submit" value="Edit This Kitty">
</form>
<br>
<form action="<%=new_cat_rental_request_url%>">
  <input type="submit" value="Request to rent this Kitty">
</form>
<br>

